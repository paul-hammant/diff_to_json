+++ java/modules/documentation/src/site/xdoc/userguide/samples/sample52.xml	(revision 1302321)
@@ -0,0 +1,150 @@
+<?xml version="1.0" encoding="ISO-8859-1" ?>
+<!--
+  ~  Licensed to the Apache Software Foundation (ASF) under one

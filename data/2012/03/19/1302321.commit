+++ java/modules/documentation/src/site/xdoc/userguide/samples/sample4.xml	(revision 1302321)
@@ -0,0 +1,156 @@
+<?xml version="1.0" encoding="ISO-8859-1" ?>
+<!--
+  ~  Licensed to the Apache Software Foundation (ASF) under one

+               var price = mc.getPayloadXML()..*::last.toString();
+               mc.setPayloadXML(
+                  &lt;m:CheckPriceResponse xmlns:m="http://www.apache-synapse.org/test"&gt;
+               &lt;m:Code&gt;{symbol}&lt;/m:Code&gt;
+               &lt;m:Price&gt;{price}&lt;/m:Price&gt;

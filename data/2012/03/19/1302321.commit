+                                     optimize="mtom"/&gt;
+                        &lt;/endpoint&gt;
+                    &lt;/send&gt;
+                &lt;/then&gt;
+            &lt;/filter&gt;
+            &lt;filter source="get-property('Action')" regex="urn:uploadFileUsingSwA"&gt;
+                &lt;then&gt;
+                    &lt;property name="example" value="swa"/&gt;
+                    &lt;send&gt;
